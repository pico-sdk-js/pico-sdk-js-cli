{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Local",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": ["--auto-connect", "--local"],
            "preLaunchTask": "npm: build",
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "env": {
                // Update below path to local executable to connect to via ".connect --local"
                "PSJ_LOCAL": "${workspaceFolder}/../engine/build/pico-sdk-js-0.0.1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch remote",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "args": [],
            "preLaunchTask": "npm: build",
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "e2e",
            "cwd": "${workspaceFolder}/e2e",
            "program": "node_modules/jest/bin/jest.js",
            "args": ["--detectOpenHandles", "--testTimeout=300000", "--testNamePattern=\"will error if file is larger than available space\""],
            "runtimeArgs": ["--experimental-vm-modules"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ]
}